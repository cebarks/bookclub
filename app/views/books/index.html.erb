<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Pages</th>
      <th>Publication date</th>
      <th>Author(s)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td class='book-data'><%= book.title %></td>
        <td class='book-data'><%= book.pages %></td>
        <td class='book-data'><%= book.pub_date %></td>
        <td class='book-data'><%= book.authors.pluck(:name).join(", ") %></td>
        <td class=''><%= link_to 'Show', book %></td>
        <td class=''><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class=''><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="new-book-link"><%= link_to 'New Book', new_book_path %></p>
